/* pages/my/index.wxss */
.mine_cells{
  background-color: #ffffff;
  margin-bottom: 10px;
}
.mine_cell{
  padding:10px 15px;position:relative;display:-webkit-box;display:-webkit-flex;display:flex;-webkit-box-align:center;-webkit-align-items:center;align-items:center;
}
.mine_cell_hd{
  -webkit-box-flex:1;
  -webkit-flex:1;
  flex:1;
}
.mine_cell_ft{
  text-align:right;
  color:#999;
}
.mine_cell_ft_access{
  padding-right:13px;position:relative}
.mine_cell_ft_access:after{
  content:" ";display:inline-block;height:6px;width:6px;border-width:2px 2px 0 0;border-color:#c8c8cd;border-style:solid;-webkit-transform:matrix(.71,.71,-.71,.71,0,0);transform:matrix(.71,.71,-.71,.71,0,0);position:relative;top:-2px;position:absolute;top:50%;margin-top:-4px;right:2px;
}
.mine_cell_split{
  height: 1px;
  background-color: #f5f5f5;
}

.avatar_wrap{
  flex: 0;
  margin-right: 20px;
}
.userinfo-avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  margin: 20rpx 0;
  display: block;
  overflow: hidden;
}
.userinfo_name{
  font-size: 32rpx;
  font-weight: bold;
}
.logout{
  color:#db0000;
  text-align: center;
}