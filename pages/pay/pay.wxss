/* pages/pay/pay.wxss */
.wrap{
  width: 100%;
  height: 80vh;
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
}
.icon_wrap{
  width: 100%;
  text-align: center;
  line-height: 200%;
}
.text1{
  width: 100%;
  font-size: 32rpx;
  text-align: center;
  color:#333333;
}
.text2{
  width: 100%;
  font-size: 28rpx;
  text-align: center;
  color:#888888;
  line-height: 200%;
}
.wrap .btn_wrap{
  margin-top: 60rpx;
  display: flex;
  align-items: center;
}
.wrap .btn_wrap button{
  margin-right: 16rpx;
  margin-left: 16rpx;
  border: 1rpx solid #dddddd;
}
.topay{
  background-color: #6BB898;
  color: #ffffff;
}