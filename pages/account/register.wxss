/* pages/account/register.wxss */
.tips{
  padding: 20rpx 30rpx;
}
.login_input_box{
  background-color: #ffffff;
}
.login_input_box .section{
  display: flex;
  padding: 20rpx 30rpx;
  align-items:center;
}
.login_input_box input{
  flex: 1;
  margin-left: 10rpx;
}
.login_input_box .iconfont{
  color: #b2b2b2;
  font-size: 42rpx;
}
.login_input_box .icon-delete2{
  margin-right: 20rpx;
}
.login_input_box .line{
  height: 1px;
  background-color: #f5f5f5;
}
.login_input_box .validcode{
  background-color: #56BE85;
  color: #ffffff;
  border-radius: 8rpx;
  height: 58rpx;
  line-height: 58rpx;
  font-size: 26rpx;
  vertical-align: middle;
  margin-top: 0.1rem;
}
.login_input_box .validcode.disabled{
  background-color: #aaaaaa;
  color: #efefef;
}
.register_tips{
  display: flex;
  padding: 30rpx;
  align-items: center;
  color: #F76260;
}
.register_tips view{
  display: flex;
  align-items: center;
}
.register_tips icon{
  margin-right: 10rpx;
}
.btn_box{
  padding: 20rpx 30rpx;
}
.btn_box .btnsubmmit{
  border: 0;
  text-align: center;
  background-color: #6BB898;
  color: #ffffff;
  border-radius: 8rpx;
}
.btn_box .btnsubmmit.disabled{
  border: 0;
  background-color:#B6B6B6;
  color: #ffffff;
}
.pass_register{
  position: fixed;
  bottom: 0px;
  background-color: #ffffff;
  text-align: center;
  padding: 20rpx 0px;
  width: 100%;
  box-shadow: 0 10px 10px #efefef;
}

.modal-mask{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background-color: #000000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}
.modal-dialog{
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  left: 50%;
  top: 50px;
  z-index: 9999;
  margin-left: -270rpx;
  margin-top: 150rpx;
  background-color: #ffffff;
  border-radius: 10rpx;
}
.modal-title{
  padding: 30rpx 0 15rpx;
  text-align:center;
  font-weight: 600;
  font-size: 16px;
}
.modal-body{
  padding: 15rpx 30rpx 30rpx;
  text-align:left;
  line-height: 40rpx;
}
.modal-line{
  height: 2rpx;
  background-color: #D2D2D2;
}
.modal-footer{
  padding: 30rpx;
  text-align: center;
  color:#7CBE86;
  font-size: 16px;
}