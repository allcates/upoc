/* pages/dake/bySchool.wxss */
.tips{
  padding: 10px 15px;
  height: 24px;
  line-height: 24px;
  font-size: 14px;
  box-shadow: 0px 10px 10px #cccccc;
  background-color: #ffffff;
}
.tips text{
  margin:0 2px;
  color: #7CBE86;
  font-weight: 800;
}

/* 样式控制  */
.list-wrapper {
  position: relative;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}
.list-title {
  background: #f5f5f5;
  color: #666;
  font-size: 36rpx;
  padding: 10rpx;
  padding-left: 30rpx;
  padding-top: 15rpx;
}
.list-item {
  position: relative;
  padding: 20rpx;
  padding-left: 30rpx;
  background-color: #fff;
  display: flex;
}
.list-item.border::after {
  content: "";
  position: absolute;
  left: 30rpx;
  right: 0;
  top: 0;
  height: 1px;
  background: #f5f5f5;
}
.list-item .name{
  flex: 1;
  font-size: 28rpx;
}
.list-item icon{
  vertical-align: middle;
  height: 18px;
}

/* 无数据  */
.nodata {
  padding-top: 200rpx;
  text-align: center;
  font-size: 32rpx;
  color: #ddd;
}