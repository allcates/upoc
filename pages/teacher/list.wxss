/* pages/teacher/list.wxss */
.wrapper {
  height: 100vh;
}
/* 关闭滚动条  */
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}
.filter-box{
  width: 750rpx;
  border-top: 2rpx solid #EFF0F3;
  border-bottom: 0rpx solid #EFF0F3;
  box-shadow:0 5px 20px #efefef;
  height: 76rpx;
  line-height: 76rpx;
  background-color: #ffffff;
  box-sizing: border-box;
  position: fixed;
  top: 0;
  display: flex;
  align-items: center;
}
.filter-menu{
  border-right: 2rpx solid #EFF0F3;
  text-align: center;
  box-sizing: border-box;
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}
.filter-menu text{
  margin-right: 5px;
}
.filter-menu::after{
  content: "";
  width:0px;
  height:0px;
  border-top:6px solid #b8b8b8;
  border-right:6px solid  rgba(0,0,0,0);
  border-bottom:6px solid rgba(0,0,0,0);
  border-left:6px solid  rgba(0,0,0,0);
  margin-top: 6px;
}
.filter-menu.selected{
  color:#2BB897;
}
.filter-menu.selected::after{
  content: "";
  width:0px;
  height:0px;
  border-top:6px solid rgba(0,0,0,0);
  border-right:6px solid  rgba(0,0,0,0);
  border-bottom:6px solid #2BB897;
  border-left:6px solid  rgba(0,0,0,0);
  margin-bottom: 10px;
}
.filter-search{
  width: 160rpx;
  text-align: center;
}

/* 遮罩层 */
.modal-mask{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 80rpx;
  left: 0;
  background-color: #000000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}
.filter-list-box{
  width: 100%;
  overflow: hidden;
  position: fixed;
  left: 0%;
  top: 80rpx;
  z-index: 9999;
  background-color: #ffffff;
}
.filter-list-box .item{
  border-bottom: 2rpx solid #f5f5f5;
  padding: 20rpx 30px;
  display: flex;
  align-items: center;
}
.filter-list-box .item .name{
  flex: 1;
}
.filter-list-box .item.selected{
  color:#2BB897;
}

.list-wrapper {
  position: relative;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  top:80rpx;
}
.list-scroll {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}

/* 样式控制  */
.list-title {
  background: #f5f5f5;
  color: #888888;
  font-size: 36rpx;
  padding: 20rpx 30rpx;
}
.list-item {
  position: relative;
  padding: 20rpx 30rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
}
.list-item.border::after {
  content: "";
  position: absolute;
  left: 30rpx;
  right: 0;
  top: 0;
  height: 1px;
  background: #f5f5f5;
}
.list-item .avatar{
  width: 70rpx;
  height: 70rpx;
  border-radius: 70rpx;
  margin-right: 20rpx;
}
.list-item .name{
  flex: 1;
  display: flex;
  align-items: center;
}

/* 无数据  */
.nodata {
  font-size: 32rpx;
  display: flex;
  flex: 1;
  align-items: center;
  justify-content: center;
  height: 80%;
}
