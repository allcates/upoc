/* pages/teacher/search.wxss */

/* 关闭滚动条  */
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}

.hisroty_box .title{
  display: flex;
  padding: 10px 15px;
}
.hisroty_box .title .label{
  flex: 1;
  font-size: 16px;
  line-height: 50rpx;
}
.hisroty_box .title .trash{
  flex: 1;
  text-align: right;
  line-height: 50rpx;
}
.hisroty_box .title .iconfont{
  font-size: 20px;
}

.list-wrapper {
  position: relative;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  background-color: #fff;
}
.list-item {
  position: relative;
  padding: 10px 15px;
  display: flex;
}
.list-item.border::after {
  content: "";
  position: absolute;
  left: 0rpx;
  right: 0;
  top: 0;
  height: 1px;
  background: #f5f5f5;
}
.list-item .avatar{
  width: 70rpx;
  height: 70rpx;
  border-radius: 70rpx;
  margin-right: 20rpx;
}
.list-item .name{
  flex: 1;
  font-size: 28rpx;
  line-height: 70rpx;
}


.result_box .title{
  display: flex;
  padding: 20rpx 30rpx;
  align-items: center;
}
.list-scroll {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}
.list-item {
  position: relative;
  padding: 20rpx 30rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
}
.list-item.border::after {
  content: "";
  position: absolute;
  left: 30rpx;
  right: 0;
  top: 0;
  height: 1px;
  background: #f5f5f5;
}
.list-item .avatar{
  width: 70rpx;
  height: 70rpx;
  border-radius: 70rpx;
  margin-right: 20rpx;
}
.list-item .name{
  flex: 1;
  display: flex;
  align-items: center;
}

/* 无数据  */
.nodata {
  font-size: 32rpx;
  display: flex;
  flex: 1;
  align-items: center;
  justify-content: center;
  height: 80%;
}